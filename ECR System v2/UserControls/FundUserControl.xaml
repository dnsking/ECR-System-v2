                                            </DataGrid.Resources>
                                            <DataGrid.Columns>

                                                <DataGridTemplateColumn >
                                                    <DataGridTemplateColumn.CellTemplate >
                                                        <DataTemplate  >
                                                            <StackPanel>
                                                                <TextBlock FontSize="11" FontWeight="Light"  Foreground="#212121" Grid.Column="0" Text="{Binding Name}" ></TextBlock>

                                                                <StackPanel Orientation="Horizontal">
                                                                    <TextBlock FontSize="24" FontWeight="Light" VerticalAlignment="Bottom"   Foreground="#616161" Grid.Column="1"  Text="{Binding Value}" ></TextBlock>
                                                                    <TextBlock FontSize="11" FontWeight="Light" VerticalAlignment="Bottom" Margin="4 0 0 0" Foreground="#616161" Grid.Column="2"  Text="{Binding SecondaryValue}" ></TextBlock>

                                                                </StackPanel>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>

                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </materialDesign:TransitionerSlide>
                                </materialDesign:Transitioner>
                            </Grid>

                        </materialDesign:TransitionerSlide>
                    </materialDesign:Transitioner>

                </Grid>

            </Grid>
            <Grid Name="EmptyPane" Visibility="Collapsed" VerticalAlignment="Center" HorizontalAlignment="Center" >

                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Height="320">

                    <TextBlock FontSize="24" VerticalAlignment="Top" HorizontalAlignment="Center" FontWeight="Normal" Foreground="#9E9E9E">Sorry, no securities found in Fund :(</TextBlock>
                    <Image Source="/Resources/empty_state.png" VerticalAlignment="Center" HorizontalAlignment="Center" Height="131" Width="141" Margin="16 16 0 0"></Image>
                </StackPanel>

                <Button Style="{StaticResource MaterialDesignRaisedAccentButton}" Margin="0 0 0 96" Width="180"
                    HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="PurchaseSecurity">
                    Add Security
                </Button>
            </Grid>

        </Grid>

    </StackPanel>
 </UserControl>
