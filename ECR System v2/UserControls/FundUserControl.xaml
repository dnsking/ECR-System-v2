<UserControl x:Class="ECR_System_v2.UserControls.FundUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ECR_System_v2.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
        xmlns:dragablz="clr-namespace:Dragablz;assembly=Dragablz"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:controls="clr-namespace:MaterialDesignExtensions.Controls;assembly=MaterialDesignExtensions"
        xmlns:model="clr-namespace:MaterialDesignExtensions.Model;assembly=MaterialDesignExtensions"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"        
        Background="#ffffff"
        FontFamily="{DynamicResource MaterialDesignFont}">
    
    <StackPanel>
        <DatePicker Name="DateSelector" ></DatePicker>
        <Grid>
            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="72"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid >
                    <StackPanel Grid.Column="0"
                  Orientation="Horizontal">
                        <Button Click="ShowStatements" Style="{StaticResource MaterialDesignFlatButton}"  Height="Auto"  Margin="0 8 0 8">
                            <StackPanel>
                                <TextBlock  Name="Statementsext"  Text="Statements" Foreground="#757575"  Style="{StaticResource MaterialDesignSubheadingTextBlock}" FontWeight="Light"/>

                                <Rectangle Name="BtnStatementsRec" Opacity="1" Height="2" Margin="0 4 0 0">
                                    <Rectangle.Fill  >
                                        <SolidColorBrush Color="#f44336"></SolidColorBrush>
                                    </Rectangle.Fill>
                                </Rectangle>
                            </StackPanel>
                        </Button>
                        <Button Click="ShowBalances" Style="{StaticResource MaterialDesignFlatButton}"  Height="Auto"  Margin="0 8 0 8">
                            <StackPanel>
                                <TextBlock Name="BalancesText"  Text="Balances" Foreground="#757575"  Style="{StaticResource MaterialDesignSubheadingTextBlock}" FontWeight="Light"/>

                                <Rectangle  Name="BtnBalancessRec" Opacity="1" Height="2" Margin="0 4 0 0">
                                    <Rectangle.Fill >
                                        <SolidColorBrush Color="#757575"></SolidColorBrush>
                                    </Rectangle.Fill>
                                </Rectangle>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignFlatButton}" 
                   Height="48" Width="180" VerticalAlignment="Center" Visibility="Collapsed" >
                            <StackPanel Orientation="Horizontal">

                                <iconPacks:PackIconMaterial Height="18" Foreground="#424242" Margin="8" Kind="CashMultiple" VerticalAlignment="Center" />
                                <Label Margin="8" Foreground="#424242" VerticalAlignment="Center">Add Interest</Label>
                            </StackPanel>

                        </Button>
                        <ComboBox Visibility="Collapsed" materialDesign:HintAssist.Hint="Statements" Width="200" materialDesign:HintAssist.IsFloating="True"
                                  MaxDropDownHeight="200"
                                  VerticalAlignment="Center" Margin="16 0 0 0">
                            <ComboBoxItem IsSelected="True">Income Statement</ComboBoxItem>
                            <ComboBoxItem>Changes In Equity</ComboBoxItem>
                            <ComboBoxItem>Statement Of Financial Position</ComboBoxItem>
                            <ComboBoxItem>Average Return On The Fund</ComboBoxItem>
                            <ComboBoxItem>Net Asset Value</ComboBoxItem>
                            <ComboBoxItem>Detailed Income Schedule</ComboBoxItem>
                            <ComboBoxItem>Expenses</ComboBoxItem>
                            <ComboBoxItem>Investment Properties</ComboBoxItem>
                            <ComboBoxItem>Government Bonds</ComboBoxItem>
                            <ComboBoxItem>Government Treasury Bills</ComboBoxItem>
                            <ComboBoxItem>Term Deposits</ComboBoxItem>
                            <ComboBoxItem>Investment In Listed Equities</ComboBoxItem>
                            <ComboBoxItem>Investment In Unlisted Equities</ComboBoxItem>
                            <ComboBoxItem>Loans And Receivables</ComboBoxItem>
                            <ComboBoxItem>Investment In CIS</ComboBoxItem>
                            <ComboBoxItem>Other Investments</ComboBoxItem>
                            <ComboBoxItem>Accounts Receivable</ComboBoxItem>
                            <ComboBoxItem>Related Party Transactions</ComboBoxItem>
                            <ComboBoxItem>Accounts Payable</ComboBoxItem>
                            <ComboBoxItem>Bank And Cash Balances</ComboBoxItem>
                            <ComboBoxItem>Counter Party Risk</ComboBoxItem>
                        </ComboBox>

                    </StackPanel>
                </Grid>
                <Grid Name="ContentPane"  Visibility="Collapsed" Grid.Row="1">

                    <materialDesign:Transitioner Name="FundUserControlSection"   SelectedIndex="0" >
                        <materialDesign:TransitionerSlide>
                            <materialDesign:TransitionerSlide.OpeningEffects>
                                <materialDesign:TransitionEffect Kind="FadeIn" Duration="0:0:0.6" />
                            </materialDesign:TransitionerSlide.OpeningEffects>
                            <Grid >
                                <StackPanel>

                                    <StackPanel Orientation="Horizontal" Background="#ffffff" Margin="16 16 0 0">

                                        <TextBlock HorizontalAlignment="Left"  FontSize="28" FontWeight="Medium" Foreground="#9E9E9E" Margin="0 0 0 8">Fund Value</TextBlock>
                                        <ComboBox Margin="16 0 0 0" materialDesign:HintAssist.Hint="Changes From" Width="78"  VerticalAlignment="Center" materialDesign:HintAssist.IsFloating="True">
                                            <ComboBoxItem Content="1D"/>
                                            <ComboBoxItem Content="1W"/>
                                            <ComboBoxItem Content="1M"/>
                                            <ComboBoxItem IsSelected="True" Content="1Q"/>
                                            <ComboBoxItem Content="1/2 Y"/>
                                            <ComboBoxItem Content="1Y"/>
                                        </ComboBox>

                                        <ComboBox materialDesign:HintAssist.Hint="Statements" Width="200" materialDesign:HintAssist.IsFloating="True"
                                  MaxDropDownHeight="200"
                                  VerticalAlignment="Center" Margin="16 0 0 0" Name="StatementsCombo">

                                            <ComboBoxItem IsSelected="True">Overview</ComboBoxItem>
                                            <ComboBoxItem>Detailed Income Schedule</ComboBoxItem>
                                            <ComboBoxItem>Expenses</ComboBoxItem>
                                            <ComboBoxItem >Income Statement</ComboBoxItem>
                                            <ComboBoxItem>Bank</ComboBoxItem>
                                            <ComboBoxItem>Changes In Equity</ComboBoxItem>
                                            <ComboBoxItem>Statement Of Financial Position</ComboBoxItem>
                                        </ComboBox>
                                    </StackPanel>

                                    <materialDesign:Transitioner Name="StatementsSection"   SelectedIndex="0" >
                                        <materialDesign:TransitionerSlide>
                                            <materialDesign:TransitionerSlide.OpeningEffects>
                                                <materialDesign:TransitionEffect Kind="FadeIn" Duration="0:0:0.6" />
                                            </materialDesign:TransitionerSlide.OpeningEffects>
                                            <StackPanel>
                                                <lvc:CartesianChart Name="FundValueCartesianChart"  LegendLocation="Right"  Height="200" >
                                                    <lvc:CartesianChart.Resources>
                                                        <Style TargetType="lvc:LineSeries">
                                                            <Setter Property="StrokeThickness" Value="1"></Setter>
                                                            <Setter Property="Fill" Value="#4EFFFFFF"></Setter>
                                                            <Setter Property="PointGeometrySize" Value="3"></Setter>
                                                            <Setter Property="LineSmoothness" Value="0"></Setter>
                                                        </Style>
                                                        <Style TargetType="lvc:DefaultLegend">
                                                            <Setter Property="Foreground" Value="#424242"></Setter>
                                                        </Style>
                                                        <Style TargetType="lvc:Axis">
                                                            <Setter Property="ShowLabels" Value="True"></Setter>
                                                            <Setter Property="IsEnabled" Value="False"></Setter>
                                                            <Setter Property="Foreground" Value="#424242"></Setter>
                                                        </Style>
                                                    </lvc:CartesianChart.Resources>
                                                    <lvc:CartesianChart.AxisX>
                                                        <lvc:Axis Title="Date" IsEnabled="False" ShowLabels="False" ></lvc:Axis>
                                                    </lvc:CartesianChart.AxisX>
                                                    <lvc:CartesianChart.AxisY>
                                                        <lvc:Axis Title="Value" IsEnabled="False" ShowLabels="False" ></lvc:Axis>
                                                    </lvc:CartesianChart.AxisY>
                                                </lvc:CartesianChart>

                                                <TextBlock HorizontalAlignment="Left"  FontSize="28" FontWeight="Medium" Foreground="#9E9E9E" Margin="0 0 0 8">Fund Transactions</TextBlock>

                                                <DataGrid Height="200"  Name="FundTransDataGrid"  HorizontalAlignment="Left" Grid.Row="0"   IsReadOnly='True' CanUserSortColumns="True" CanUserAddRows="False" AutoGenerateColumns="False"
                      materialDesign:DataGridAssist.CellPadding="13 8 8 8" materialDesign:DataGridAssist.ColumnHeaderPadding="8" Background="Transparent" >
                                                    <DataGrid.Columns>

                                                        <DataGridTextColumn 
                                            Header="Date"
                                                         Width="1*"
                        Binding="{Binding DateFormated}"
                                            />
                                                        <DataGridTextColumn 
                                            Header="Name"
                                                         Width="1*"
                        Binding="{Binding Name}"
                                            />

                                                        <DataGridTextColumn 
                                            Header="Asset Type"
                                                         Width="1*"
                        Binding="{Binding Type}"
                                            />
                                                        <DataGridTextColumn 
                                            Header="Asset Value"
                                                         Width="1*"
                        Binding="{Binding Value}"
                                            />
                                                    </DataGrid.Columns>
                                                </DataGrid>

                                            </StackPanel>
                                        </materialDesign:TransitionerSlide>
                                        <materialDesign:TransitionerSlide>
                                            <materialDesign:TransitionerSlide.OpeningEffects>
                                                <materialDesign:TransitionEffect Kind="FadeIn" Duration="0:0:0.6" />
                                            </materialDesign:TransitionerSlide.OpeningEffects>
                                            <Grid>
                                                <StackPanel>

                                                    <DataGrid Name="StatmentsDataGrid" VerticalAlignment="Top" Height="340"  IsReadOnly="True" Margin="0 8 0 0" CanUserSortColumns="True" CanUserAddRows="False" AutoGenerateColumns="False"
                      materialDesign:DataGridAssist.CellPadding="13 8 8 8"  materialDesign:DataGridAssist.ColumnHeaderPadding="8" Background="#ffffff">
                                                        <DataGrid.Resources>
                                                            <Style TargetType="ToolTip">
                                                            </Style>
                                                        </DataGrid.Resources>

                                                        <DataGrid.Columns>

                                                        </DataGrid.Columns>
                                                    </DataGrid>
                                                    <StackPanel Orientation="Horizontal" Margin="0 16 0 0">
                                                        <TextBlock Style="{StaticResource MaterialDesignSubheadingTextBlock}" Margin="8" VerticalAlignment="Center" FontWeight="Medium">Balance</TextBlock>
                                                        <TextBlock Name="StatmentsDataGridBalance" Style="{StaticResource MaterialDesignDisplay1TextBlock}" Foreground="#37474F" Margin="8">0.0 ZMW</TextBlock>


                                                    </StackPanel>

                                                </StackPanel>

                                            </Grid>
                                        </materialDesign:TransitionerSlide>
                                        <materialDesign:TransitionerSlide>
                                            <materialDesign:TransitionerSlide.OpeningEffects>
                                                <materialDesign:TransitionEffect Kind="FadeIn" Duration="0:0:0.6" />
                                            </materialDesign:TransitionerSlide.OpeningEffects>
                                            <StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <Expander HorizontalAlignment="Stretch"
                      Header="Add Provision" Margin="8">
                                                        <StackPanel Orientation="Horizontal"
                            TextBlock.Foreground="{DynamicResource MaterialDesignBody}"
                            Margin="16">
                                                            <TextBox 
				    x:Name="ProvisionAmountTextBox"
				    materialDesign:HintAssist.Hint="Amount" Width="180"/>
                                                            <Button Style="{StaticResource MaterialDesignRaisedAccentButton}" Margin="8 0 0 0" Width="100">
                                                                Done
                                                            </Button>
                                                        </StackPanel>
                                                    </Expander>
                                                    <Expander HorizontalAlignment="Stretch"
                      Header="Add Payment"  Margin="8">
                                                        <StackPanel Orientation="Horizontal"
                            TextBlock.Foreground="{DynamicResource MaterialDesignBody}"
                            Margin="16">
                                                            <TextBox 
				    x:Name="PaymentAmountTextBox"
				    materialDesign:HintAssist.Hint="Amount" Width="180"/>
                                                            <Button Style="{StaticResource MaterialDesignRaisedAccentButton}" Margin="8 0 0 0" Width="100">
                                                                Done
                                                            </Button>
                                                        </StackPanel>
                                                    </Expander>
                                                </StackPanel>
                                                <DataGrid  SelectionUnit="FullRow"  Name="ExpensesStatementDataGrid"  HorizontalAlignment="Left" Grid.Column="1"   IsReadOnly='True' CanUserSortColumns="True" CanUserAddRows="False" AutoGenerateColumns="False"
                      materialDesign:DataGridAssist.CellPadding="13 8 8 8" materialDesign:DataGridAssist.ColumnHeaderPadding="8" Background="#ffffff" >
                                                    <DataGrid.Resources>
                                                        <Style TargetType="ToolTip">
                                                            <Setter Property="Background" Value="#37474F"></Setter>
                                                        </Style>
                                                        <Style TargetType="{x:Type DataGridCell}" BasedOn="{StaticResource {x:Type DataGridCell}}">

                                                            <Setter Property="BorderBrush" Value="Transparent"></Setter>
                                                            <Style.Triggers>

                                                                <Trigger Property="IsSelected" Value="True">
                                                                    <Setter Property="Background" Value="Transparent"></Setter>
                                                                    <Setter Property="BorderBrush" Value="Transparent"></Setter>
                                                                </Trigger>
                                                                <Trigger Property="IsFocused" Value="True">
                                                                    <Setter Property="Background" Value="Transparent"></Setter>
                                                                    <Setter Property="BorderBrush" Value="Transparent"></Setter>
                                                                </Trigger>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="Transparent"></Setter>
                                                                    <Setter Property="BorderBrush" Value="Transparent"></Setter>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                        <Style TargetType="{x:Type DataGridRow}">

                                                            <Setter Property="BorderBrush" Value="Transparent"></Setter>
                                                            <Style.Triggers>

                                                                <Trigger Property="IsSelected" Value="True">
                                                                    <Setter Property="Background" Value="Transparent"></Setter>
                                                                    <Setter Property="BorderBrush" Value="Transparent"></Setter>
                                                                </Trigger>
                                                                <Trigger Property="IsFocused" Value="True">
                                                                    <Setter Property="Background" Value="Transparent"></Setter>
                                                                    <Setter Property="BorderBrush" Value="Transparent"></Setter>
                                                                </Trigger>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="Transparent"></Setter>
                                                                    <Setter Property="BorderBrush" Value="Transparent"></Setter>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </DataGrid.Resources>
                                                    <DataGrid.Columns>
                                                        <DataGridTemplateColumn Header="Expense">
                                                            <DataGridTemplateColumn.CellTemplate>
                                                                <DataTemplate>


                                                                    <TextBlock  Text="{Binding Expense}" Foreground="#607D8B" Style="{StaticResource MaterialDesignCaptionTextBlock}"  />
                                                                </DataTemplate>
                                                            </DataGridTemplateColumn.CellTemplate>
                                                        </DataGridTemplateColumn>
                                                        <DataGridTemplateColumn Header="Opening Balance">
                                                            <DataGridTemplateColumn.CellTemplate>
                                                                <DataTemplate>


                                                                    <TextBlock  Text="{Binding OpeningBalanceFormated}" Foreground="#212121" Style="{StaticResource MaterialDesignCaptionTextBlock}"  />
                                                                </DataTemplate>
                                                            </DataGridTemplateColumn.CellTemplate>
                                                        </DataGridTemplateColumn>
                                                        <DataGridTemplateColumn Header="Payments">
                                                            <DataGridTemplateColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <TextBlock  Text="{Binding PaymentsFormated}" Background="#4DD0E1" Foreground="#212121" Style="{StaticResource MaterialDesignCaptionTextBlock}"  />
                                                                </DataTemplate>
                                                            </DataGridTemplateColumn.CellTemplate>
                                                        </DataGridTemplateColumn>

                                                        <DataGridTemplateColumn Header="Provisions">
                                                            <DataGridTemplateColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <TextBlock  Text="{Binding ProvisionsFormated}" Background="#FFD54F" Foreground="#212121" Style="{StaticResource MaterialDesignCaptionTextBlock}"  />
                                                                </DataTemplate>
                                                            </DataGridTemplateColumn.CellTemplate>
                                                        </DataGridTemplateColumn>

                                                        <DataGridTemplateColumn Header="Closing Balance">
                                                            <DataGridTemplateColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <TextBlock  Text="{Binding ClosingBalanceFormated}" Foreground="#212121" Style="{StaticResource MaterialDesignCaptionTextBlock}"  />
                                                                </DataTemplate>
                                                            </DataGridTemplateColumn.CellTemplate>
                                                        </DataGridTemplateColumn>
                                                    </DataGrid.Columns>
                                                </DataGrid>

                                            </StackPanel>
                                        </materialDesign:TransitionerSlide>
                                        <materialDesign:TransitionerSlide>
                                            <materialDesign:TransitionerSlide.OpeningEffects>
                                                <materialDesign:TransitionEffect Kind="FadeIn" Duration="0:0:0.6" />
                                            </materialDesign:TransitionerSlide.OpeningEffects>
                                            <StackPanel>
                                                <Grid Height="330"  Background="#fafafa">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="1*"/>
                                                        <ColumnDefinition Width="2"/>
                                                        <ColumnDefinition Width="1*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Separator Width="2" Foreground="#424242"></Separator>

                                                    <DataGrid Name="IncomeStatementInvestmentIncomeGrid" Background="#fafafa" Margin="0 8 0 0"  CanUserSortColumns="True" CanUserAddRows="False" AutoGenerateColumns="False"
                      materialDesign:DataGridAssist.CellPadding="13 8 8 8" IsReadOnly="True" materialDesign:DataGridAssist.ColumnHeaderPadding="8">
                                                        <DataGrid.Columns>
                                                            <DataGridTextColumn Binding="{Binding Name}"
                                            Header="Investment Income" Width="1*"
                                            />
                                                            <DataGridTextColumn Binding="{Binding Value}"
                                            Header="Amount" Width="1*"
                                            />

                                                        </DataGrid.Columns>
                                                    </DataGrid>
                                                    <DataGrid Grid.Column="2" Background="#fafafa" Name="IncomeStatementExpenseGrid" Margin="0 8 0 0" CanUserSortColumns="True" CanUserAddRows="False" AutoGenerateColumns="False"
                      materialDesign:DataGridAssist.CellPadding="13 8 8 8" IsReadOnly="True" materialDesign:DataGridAssist.ColumnHeaderPadding="8">
                                                        <DataGrid.Columns>
                                                            <DataGridTextColumn Binding="{Binding Name}"
                                            Header="Expense" Width="1*"
                                            />
                                                            <DataGridTextColumn Binding="{Binding Value}"
                                            Header="Amount" Width="1*"
                                            />

                                                        </DataGrid.Columns>
                                                    </DataGrid>
                                                </Grid>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="1*"/>
                                                        <ColumnDefinition Width="1*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel>
                                                        <TextBlock Style="{StaticResource MaterialDesignSubheadingTextBlock}" Margin="8">Total Income</TextBlock>
                                                        <TextBlock Style="{StaticResource MaterialDesignDisplay1TextBlock}" Foreground="#37474F" Name="IncomeStatmentTotalIncomeTextBlock" Margin="8">0.0 ZMW</TextBlock>

                                                    </StackPanel>
                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Style="{StaticResource MaterialDesignSubheadingTextBlock}" Margin="8">Period Surplus(Deficit)</TextBlock>
                                                        <TextBlock Style="{StaticResource MaterialDesignDisplay1TextBlock}" Foreground="#37474F" Name="IncomeStatmentPeriodSurplusTextBlock" Margin="8">0.0 ZMW</TextBlock>

                                                    </StackPanel>
                                                </Grid>
                                            </StackPanel>

                                        </materialDesign:TransitionerSlide>
                                        <materialDesign:TransitionerSlide>
                                            <materialDesign:TransitionerSlide.OpeningEffects>
                                                <materialDesign:TransitionEffect Kind="FadeIn" Duration="0:0:0.6" />
                                            </materialDesign:TransitionerSlide.OpeningEffects>
                                            <StackPanel>

                                                <StackPanel Orientation="Horizontal">
                                                    <Expander HorizontalAlignment="Stretch"
                      Header="Add Transtion" Margin="8">
                                                        <StackPanel Orientation="Horizontal"
                            TextBlock.Foreground="{DynamicResource MaterialDesignBody}"
                            Margin="16">
                                                            <TextBox 
				    x:Name="AccountNameTextBox"
				    materialDesign:HintAssist.Hint="Account Name" Width="180"/>

                                                            <TextBox 
				    x:Name="AccountAmountTextBox"
				    materialDesign:HintAssist.Hint="Amount" Width="180" Margin="8 0 0 0"/>
                                                            <Button Style="{StaticResource MaterialDesignRaisedAccentButton}" Margin="8 0 0 0" Width="100">
                                                                Done
                                                            </Button>
                                                        </StackPanel>
                                                    </Expander>
                                                </StackPanel>
                                                <DataGrid Name="BankDataGrid" IsReadOnly="True" Margin="32 8 0 0" CanUserSortColumns="True" CanUserAddRows="False" AutoGenerateColumns="False"
                      materialDesign:DataGridAssist.CellPadding="13 8 8 8" materialDesign:DataGridAssist.ColumnHeaderPadding="8" Background="#ffffff">
                                                    <DataGrid.Resources>
                                                        <Style TargetType="ToolTip">
                                                            <Setter Property="Background" Value="#37474F"></Setter>
                                                        </Style>
                                                    </DataGrid.Resources>

                                                    <DataGrid.Columns>
                                                        <DataGridTextColumn Binding="{Binding Name}"
                                            Header="Bank" Width="1*"
                                            />
                                                        <DataGridTextColumn Binding="{Binding AccountName}"
                                            Header="Account Name" Width="1*"
                                            />
                                                        <DataGridTextColumn Binding="{Binding AccountNumber}"
                                            Header="Account Number" Width="1*"
                                            />
                                                        <DataGridTextColumn Binding="{Binding AmountFormated}"
                                            Header="Amount" Width="1*"
                                            />
                                                    </DataGrid.Columns>
                                                </DataGrid>

                                            </StackPanel>
                                        </materialDesign:TransitionerSlide>
                                        <materialDesign:TransitionerSlide>
                                            <materialDesign:TransitionerSlide.OpeningEffects>
                                                <materialDesign:TransitionEffect Kind="FadeIn" Duration="0:0:0.6" />
                                            </materialDesign:TransitionerSlide.OpeningEffects>
                                            <StackPanel>

                                                <DataGrid Name="ChangeInEquityDataGrid" IsReadOnly="True" Margin="32 8 0 0" CanUserSortColumns="True" CanUserAddRows="False" AutoGenerateColumns="False"
                      materialDesign:DataGridAssist.CellPadding="13 8 8 8" Height="330" materialDesign:DataGridAssist.ColumnHeaderPadding="8" Background="#ffffff">
                                                    <DataGrid.Resources>
                                                        <Style TargetType="ToolTip">
                                                            <Setter Property="Background" Value="#37474F"></Setter>
                                                        </Style>
                                                    </DataGrid.Resources>

                                                    <DataGrid.Columns>
                                                        <DataGridTextColumn Binding="{Binding Name}"
                                            Header="" Width="1*"
                                            />
                                                        <DataGridTextColumn Binding="{Binding Value}"
                                            Header="Units" Width="1*"
                                            />
                                                        <DataGridTextColumn Binding="{Binding SecondaryValue}"
                                            Header="Members Fund" Width="1*"
                                            />
                                                        <DataGridTextColumn Binding="{Binding ThirdValue}"
                                            Header="Retained Earnings" Width="1*"
                                            />
                                                        <DataGridTextColumn Binding="{Binding ForthValue}"
                                            Header="Total" Width="1*"
                                            />
                                                    </DataGrid.Columns>
                                                </DataGrid>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="1*"/>
                                                        <ColumnDefinition Width="1*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Style="{StaticResource MaterialDesignSubheadingTextBlock}" Margin="8">Opening Balance</TextBlock>
                                                        <TextBlock Style="{StaticResource MaterialDesignDisplay1TextBlock}" Foreground="#37474F" Margin="8">0.0 ZMW</TextBlock>

                                                    </StackPanel>
                                                    <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                                        <TextBlock Style="{StaticResource MaterialDesignSubheadingTextBlock}" Margin="8">Opening Balance</TextBlock>
                                                        <TextBlock Style="{StaticResource MaterialDesignDisplay1TextBlock}" Foreground="#37474F" Margin="8">0.0 ZMW</TextBlock>

                                                    </StackPanel>
                                                </Grid>
                                            </StackPanel>
                                        </materialDesign:TransitionerSlide>
                                        <materialDesign:TransitionerSlide>
                                            <materialDesign:TransitionerSlide.OpeningEffects>
                                                <materialDesign:TransitionEffect Kind="FadeIn" Duration="0:0:0.6" />
                                            </materialDesign:TransitionerSlide.OpeningEffects>
                                            <StackPanel>

                                                <StackPanel Orientation="Horizontal" Margin="0 16 0 0">
                                                    <TextBlock Style="{StaticResource MaterialDesignSubheadingTextBlock}" Margin="8" VerticalAlignment="Center" >Balance</TextBlock>
                                                    <TextBlock Name="AssetsSOFPDataGridBalance" Style="{StaticResource MaterialDesignDisplay1TextBlock}" Foreground="#37474F" Margin="8">0.0 ZMW</TextBlock>


                                                </StackPanel>
                                                <controls:Stepper Name="DataEntryStepper"   IsLinear="True"  Height="420" Layout="Vertical"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                                    <model:Step>
                                                        <model:Step.Header>
                                                            <model:StepTitleHeader FirstLevelTitle="Assets" />
                                                        </model:Step.Header>
                                                        <model:Step.Content>
                                                            <StackPanel>

                                                                <controls:StepButtonBar  Continue="Continue" />
                                                                <DataGrid Name="AssetsSOFPDataGrid" IsReadOnly="True" CanUserSortColumns="True" CanUserAddRows="False" AutoGenerateColumns="False"
                      materialDesign:DataGridAssist.CellPadding="13 8 8 8" Height="270" materialDesign:DataGridAssist.ColumnHeaderPadding="8" Background="#ffffff">
                                                                    <DataGrid.Resources>
                                                                        <Style TargetType="ToolTip">
                                                                            <Setter Property="Background" Value="#37474F"></Setter>
                                                                        </Style>
                                                                    </DataGrid.Resources>

                                                                    <DataGrid.Columns>
                                                                        <DataGridTextColumn Binding="{Binding Name}"
                                            Header="" Width="1*"
                                            />
                                                                        <DataGridTextColumn Binding="{Binding Value}"
                                            Header="Amount" Width="1*"
                                            />
                                                                    </DataGrid.Columns>
                                                                </DataGrid>

                                                            </StackPanel>

                                                        </model:Step.Content>
                                                    </model:Step>
                                                    <model:Step>
                                                        <model:Step.Header>
                                                            <model:StepTitleHeader FirstLevelTitle="Liabilities" />
                                                        </model:Step.Header>
                                                        <model:Step.Content>
                                                            <StackPanel>

                                                                <controls:StepButtonBar  Back="BACK" Continue="Continue" />
                                                                <DataGrid Name="LiabilitesSOFPDataGrid" IsReadOnly="True" CanUserSortColumns="True" CanUserAddRows="False" AutoGenerateColumns="False"
                      materialDesign:DataGridAssist.CellPadding="13 8 8 8" Height="330" materialDesign:DataGridAssist.ColumnHeaderPadding="8" Background="#ffffff">
                                                                    <DataGrid.Resources>
                                                                        <Style TargetType="ToolTip">
                                                                            <Setter Property="Background" Value="#37474F"></Setter>
                                                                        </Style>
                                                                    </DataGrid.Resources>

                                                                    <DataGrid.Columns>
                                                                        <DataGridTextColumn Binding="{Binding Name}"
